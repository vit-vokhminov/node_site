div(class='col col-md-4')
	div(class='card')
		div(class='card-main')
			a(href="goods/"+val['slug'])
				h3(class='card-title text-center') #{val['name']}
				img(
					src='images/'+val['image']
					class='card-images'
				)

		div(class='card-main')
			p(class='text-center') #{val['cost'].toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$& ')} rub
			ul(class='card-actions')
				li
					button(
					data-goods_id = val['id']
					class='button button-primary add-to-cart'
					) to cart